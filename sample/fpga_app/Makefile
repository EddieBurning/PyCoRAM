.PHONY: clean
clean:
	make clean -C dijkstra
	make clean -C matrix-mult
	make clean -C matrix-mult-merged
	make clean -C matrix-mult-simd
	make clean -C matrix-mult-stream
	make clean -C matrix-mult-stream-light
	make clean -C stencil-9p
	make clean -C stencil-9p-merged
	make clean -C stencil-9p-stream
	make clean -C stencil-9p-wide
	make clean -C stencil-9p-wide-opt
	make clean -C sum
	make clean -C uart_loader

.PHONY: build
